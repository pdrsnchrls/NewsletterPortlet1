<?xml version="1.0"?>

<model-hints>
	<model name="com.liferay.amf.newsletter.model.Issue">
		<field name="issueId" type="long" />
		<field name="issueNumber" type="long" />
		<field name="title" type="String" />
		<field name="description" type="String" />
			<hint-collection name="CONTENTAREA" />		
		<field name="issueDate" type="Date" />
		<field name="byline" type="String" />
	</model>
	<model name="com.liferay.amf.newsletter.model.Newsletter">
		<field name="newsletterId" type="long" />
		<field name="issueNumber" type="long" />
		<field name="title" type="String" />
		<field name="author" type="String" />
		<field name="order" type="int" />
		<field name="content" type="String">
			<hint-collection name="CONTENTAREA" />
		</field>
	</model>
	<hint-collection name="CONTENTAREA">
		<hint name="max-length">8000</hint>
	</hint-collection>
</model-hints>